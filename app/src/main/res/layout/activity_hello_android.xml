<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D6C8BA"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/udacity"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:src="@drawable/udacity"
        android:scaleType="centerCrop"
        android:layout_alignParentTop="true" />

    <TextView
        android:id="@+id/txt1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginTop="20dp"
        android:layout_below="@id/udacity"
        android:textSize="25dp"
        android:fontFamily="casual"
        android:text="Udacity" />

    <TextView
        android:id="@+id/txt2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_below="@id/txt1"
        android:textSize="20dp"
        android:fontFamily="casual"
        android:text="2465 Latham St." />

    <TextView
        android:id="@+id/txt3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_below="@id/txt2"
        android:textSize="20dp"
        android:fontFamily="casual"
        android:text="Mountain View, Ca. 94043" />

    <TextView
        android:id="@+id/txt4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_below="@id/txt3"
        android:textSize="20dp"
        android:fontFamily="casual"
        android:text="650-555-5555" />

    <TextView
        android:id="@+id/txt5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_below="@id/txt4"
        android:textSize="20dp"
        android:fontFamily="casual"
        android:textColor="#0E88F4"
        android:autoLink="web"
        android:text="www.udacity.com" />

</RelativeLayout>